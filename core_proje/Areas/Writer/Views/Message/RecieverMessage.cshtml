 @using entitylayer.concrete
 @model List<WriterMessage>
@{
    ViewData["Title"] = "RecieverMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Gönderen</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1; 
                        }
                        @foreach(var item in Model)
                        {
                            <tr>
                                <th>@i</th>
                                <td>@item.Subject</td>
                                <td>@item.SenderName</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/Writer/Message/MessageDetails/@item.WriterMessageID/" class=" btn btn-outline-primary">Mesajı Gör</a></td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
                <button type="button" class="btn btn-google" onclick="history.back()">Geri</button
            </div>
        </div>
    </div>
</div>
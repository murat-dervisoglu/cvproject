 @using entitylayer.concrete
 @model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Konu</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@i</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime) item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="badge badge-outline-success">@item.Status</label></td>
                                <td><a href = "/Writer/Default/AnnouncementDetails/@item.ID/" class=" btn btn-outline-primary">Detaylar</a></td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
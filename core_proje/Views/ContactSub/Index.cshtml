@model entitylayer.concrete.contact

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "ContactSub", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">            
            <div class="card-body">
                <form class="forms-sample">
                     @Html.HiddenFor(x => x.concactID)
                    <div class="form-group">
                        <label>Header</label>
                        @Html.TextBoxFor(x => x.title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Telefon</label>
                        @Html.TextBoxFor(x => x.phonenumber, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>E-Mail</label>
                        @Html.TextBoxFor(x => x.mail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <br />
                        @Html.TextAreaFor(x => x.description, 6, 30, new { @class = "form-conrol" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button type="button" class="btn btn-light" onclick="history.back()">Geri</button
                </form>
            </div>
        </div>
    </div>
}
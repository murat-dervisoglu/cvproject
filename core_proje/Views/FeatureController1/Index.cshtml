@model entitylayer.concrete.feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("Index", "FeatureController1", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">            
            <div class="card-body">
                <form class="forms-sample">
                     @Html.HiddenFor(x => x.featureID)
                    <div class="form-group">
                        <label>Header</label>
                        @Html.TextBoxFor(x => x.header, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Ad-Soyad</label>
                        @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x => x.title, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button type="button" class="btn btn-light" onclick="history.back()">Geri</button
                </form>
            </div>
        </div>
    </div>
}
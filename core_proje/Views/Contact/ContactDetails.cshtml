@model entitylayer.concrete.message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                     @Html.HiddenFor(x => x.messageID)
                    <div class="form-group">
                        <label>Gönderen</label>
                        @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>E-Mail</label>
                        @Html.TextBoxFor(x => x.mail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.date, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>İçerik</label>
                        @Html.TextAreaFor(x => x.contect,6,3, new { @class = "form-control" })
                    </div>
                    <button type="button" class="btn btn-light" onclick="history.back()">Geri</button>
                </form>
            </div>
        </div>
    </div>
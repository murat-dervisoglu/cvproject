@model entitylayer.concrete.experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
    <div class="card-header border-0">
    <h4 class="mb-0">Bir Deneyiminizi Güncelleyin</h4>
</div>

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                     @Html.HiddenFor(x => x.experienceId)
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.date, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        @Html.TextBoxFor(x => x.imageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x => x.description,6,3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button type="button" class="btn btn-light" onclick="history.back()">Geri</button>
                </form>
            </div>
        </div>
    </div>
}
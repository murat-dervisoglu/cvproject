@using entitylayer.concrete
@model List<WriterMessage>
<div class="col-md-12 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Mesajlar</h4>
                <a href="" class="text-muted mb-1 small"></a>
            </div>
            @foreach(var item in Model)
            {
            <div class="preview-list">
                <div class="preview-item border-bottom">
                    
                    <div class="preview-item-content d-flex flex-grow">
                        <div class="flex-grow">
                            <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                <h6 class="preview-subject">@item.SenderName</h6>
                                <p class="text-muted text-small">@item.Subject</p>
                            </div>
                                @if (item.Content.Length<=30)
                                {
                                    <p class="text-muted">@item.Content</p>
                                }
                                else if (item.Content.Length > 30)
                                {
                                    <p class="text-muted">@item.Content.Substring(0,30)...</p>
                                }
                        </div>
                    </div>
                </div>
		    </div>
		    }
        </div>
    </div>
</div>